<%= form_for [@contest_team, @refund_record] do |f| %>
  <div>
    <% if @refund_record.new_record? %>
      <%= f.text_field :order_number, placeholder: '订单号' %>
    <% else %>
      <%= @refund_record.order.order_number %>
    <% end %>
  </div>
  <div>
    <% if @refund_record.new_record? %>
      <%= f.text_field :receiver, placeholder: '收件人' %>
    <% else %>
      <%= @refund_record.order.receiver %>
    <% end %>
  </div>
  <div>
    <%= f.collection_select :express_id, Express.all, :id, :name, prompt: '请选择快递公司' %>
  </div>
  <div>
    <%= f.text_field :tracking_number, placeholder: '运单号' %>
  </div>
  <div>
    <%= f.submit '提交', :disable_with => '正在提交...' %>
  </div>
<% end %>
<%= form_for [@contest_team, @refund_record] do |f| %>
<div class="team_return_goods_popup_box">
    <div class="team_return_goods_popup_title">退货申请</div>
    <div class="team_return_goods_popup_detail">
      <div class="team_return_goods_popup_row">
        <span class="team_return_name">订单信息</span>
        <div class="team_return_line">
        </div>
      </div>
      <div class="team_return_goods_popup_row">
        <%= f.text_field :order_number, placeholder: '订单号',
          value: @refund_record.order_number || @refund_record.try(:order).try(:order_number),
          disabled: !@refund_record.new_record?, class: 'team_return_good_input' %>
        <%= f.text_field :receiver, placeholder: '收件人',
          value: @refund_record.receiver || @refund_record.try(:order).try(:receiver),
          disabled: !@refund_record.new_record?, class: 'team_return_good_input' %>
        <div class="error-message"><%= @refund_record.errors.messages[:order_number].first if @refund_record.errors[:order_number].any? %></div>
        <div class="error-message"><%= @refund_record.errors.messages[:receiver].first if @refund_record.errors[:receiver].any? %></div>
      </div>
      <div class="team_return_goods_popup_row">
        <span class="team_return_name">物流信息</span>
      </div>
      <div class="team_return_goods_popup_row">
        <%= f.collection_select :express_id, Express.all, :id, :name, {prompt: '请选择快递公司'}, class: 'team_return_good_input' %>
        <%= f.text_field :tracking_number, placeholder: '运单号', class: 'team_return_good_input' %>
        <div class="error-message"><%= @refund_record.errors.messages[:express_id].first if @refund_record.errors[:express_id].any? %></div>
        <div class="error-message"><%= @refund_record.errors.messages[:tracking_number].first if @refund_record.errors[:tracking_number].any? %></div>
      </div>
      <div class="team_return_goods_popup_row" style="margin-top: 35px">
        <input type="reset" class="return_good_reset" value="取消">
        <input type="submit" class="return_good_submit" value="提交">
      </div>
    </div>
  </div>
<% end %>
