<div class="container-fluid">
  <%= image_tag("banner.png", class: "center-img app-banner") %>
  <%= image_tag("onsale.png", class: "center-img on-sale-notification") %>
  <div class="on-sale-products">
    <% @on_sale_products.each do |product| %>
      <div class="on-sale-product on-sale-product<%= product.product_view.sale_image_type %>">
        <%= image_tag product.product_view.sale_image_url %>
        <div class="product-name">
          <%= product.name %>
        </div>
        <div class="product-description">
          <%= product.product_view.home_page_description %>
        </div>
        <div class="product-price">
          <span class="product-current-price">&#165;<%= product.price %> </span>
          <span class="product-original-price">原价&#165;<%= product.original_price %> </span>
        </div>
      </div>
    <% end %>
  </div>
  <%= image_tag("upcoming.png", class: "center-img upcoming-notification") %>
  <% @upcoming_products.each do |product| %>
    <div> <%= product.id %> </div>
  <% end %>
</div>

