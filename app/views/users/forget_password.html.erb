<div class="user-op-form-panel center-block forget-password-box">
  <div class="user-op-form-header">
    找回密码
  </div>
  <%= form_for @user, url: {action: :do_forget_password} do |f| %>
    <div class="username-panel input-panel">
      <%= f.text_field :username, placeholder: "输入您的手机号" %>
    </div>
    <div class="submit-panel input-panel">
      <%= f.submit "提交" %>
    </div>
  <% end %>
  <div class="security-code-panel input-panel">
    <input name="security_code" class="security-code-input" type="text", placeholder="验证码">
    <button class="security-code-button">获取验证码</button>
  </div>
</div>
