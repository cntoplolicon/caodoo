<div class="container">
  <dl class="dl-horizontal">
    <dt>快递公司</dt>
    <dd> <%= @order.express.name %></dd>
    <dt>订单号</dt>
    <dd> <%= @order.tracking_number %></dd>
  </dl>
  <% if @express_info.any? %>
    <dl class="dl-horizontal">
      <% @express_info.each do |r| %>
        <dt><%= r[:time] %></dt>
        <dd><%= r[:content] %></dd>
      <% end %>
    </dl>
  <% else %>
    <dl class="dl-horizontal">
      <dt>暂无物流信息</dt>
      <dd></dd>
    </dl>
  <% end %>
  <%= link_to "返回", admin_order_path(@order), class: 'btn btn-default' %>
</div>
