<div class="container form-container">
  <%= form_tag(import_payment_admin_orders_path, multipart: true) do %>
    <%= label_tag '支付CSV上传：格式（订单号，支付方式(支付宝:0, 微信:1)，金额，支付时间）' %>
    <%= file_field_tag :file, class: 'form-control' %>
    <div style="margin-top: 16px">
      <%= link_to "返回", admin_orders_path, class: 'btn btn-default' %>
      <%= submit_tag '提交', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div class="container">
  <% if @results %>
    <table class="table table-hover">
      <tr>
        <th>订单号</th>
        <th>支付方式</th>
        <th>金额</th>
        <th>订单状态</th>
        <th>结果</th>
      </tr>
      <% @results.each do |r| %>
        <tr>
          <td><%= r[:order_number] %></td>
          <td><%= r[:payment_type] %></td>
          <td><%= r[:amount] %></td>
          <td><%= order_status_text(r[:order_status]) %></td>
          <td><%= r[:message] %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
