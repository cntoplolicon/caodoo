<div class="container form-container">
  <%= form_for [:admin, @brand] do |f| %>
    <div class="form-group">
      <%= f.label :name, '名称' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :logo, '上传logo' %>
      <%= f.file_field :logo, class: 'brand-logo-input' %>
    </div>
    <%= link_to "返回", admin_brands_path, class: 'btn btn-default' %>
    <%= f.submit '提交', data: {disable_with: '正在提交'}, class: 'btn btn-primary' %>
  <% end %>
</div>
