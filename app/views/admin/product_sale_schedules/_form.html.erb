<% if @product_sale_schedule.errors.any? %>
  <div class="container form-container">
    <ul>
      <% @product_sale_schedule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [:admin, @product, @product_sale_schedule] do |f| %>
  <div class="container form-container">
    <div class="form-group">
      <%= f.label :sale_start, '闪购开始' %>
      <div class="input-group date">
        <%= f.text_field :sale_start, class: 'form-control' %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :sale_end, '闪购结束' %>
      <div class="input-group date">
        <%= f.text_field :sale_end, class: 'form-control' %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :trailer_start, '预告开始' %>
      <div class="input-group date">
        <%= f.text_field :trailer_start, class: 'form-control' %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :trailer_end, '预告结束' %>
      <div class="input-group date">
        <%= f.text_field :trailer_end, class: 'form-control' %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <%= link_to "返回", admin_products_path, class: 'btn btn-default' %>
    <%= f.submit '提交', :disable_with => '提交ing...', class: 'btn btn-primary' %>
  </div>
<% end %>
