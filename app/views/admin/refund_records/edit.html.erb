<% if @refund_record.errors.any? %>
  <div class="container form-container">
    <ul>
      <% @refund_record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container form-container">
  <%= form_for [:admin, @refund_record] do |f| %>
    <div class="form-group">
      <%= label_tag '状态' %>
      <%= f.select :status, options_for_select([
        [refund_record_status_text(RefundRecord::PENDING), RefundRecord::PENDING], 
        [refund_record_status_text(RefundRecord::REFUNDED), RefundRecord::REFUNDED], 
        [refund_record_status_text(RefundRecord::CANCELLED), RefundRecord::CANCELLED] ]), {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag '备注' %>
      <%= f.text_field :remark, class: 'form-control' %>
    </div>
    <%= link_to "返回", admin_refund_records_path, class: 'btn btn-default' %>
    <%= f.submit '提交', :disable_with => '提交ing...', class: 'btn btn-primary' %>
  <% end %>
</div>
