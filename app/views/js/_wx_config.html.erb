<% content_for(:page_specific_js) do %>
  <script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript" charset="utf-8"></script>
  <script type="text/javascript" charset="utf-8">
    wx.config({
      debug: true,
      appId: '<%= Settings.wx_api.app_id %>',
      timestamp: <%= @wx_jsapi[:timestamp] %>,
      nonceStr: '<%= @wx_jsapi[:nonce_str] %>',
      signature: '<%= @wx_jsapi[:signature] %>',
      jsApiList: ['onMenuShareTimeline'],
      success: function() {
        alert('success');
      }
    });
    wx.ready(function() {
      wx.onMenuShareTimeline({
        title: '这是测试标题',
        link: window.location.href,
        imgUrl: '<%= asset_url("mobile_game_poster.jpg") %>',
        success: function () {
          alert('分享成功');
        }
      });
    });
  </script>
<% end %>
