<!DOCTYPE html>
<html>
  <head>
    <title>大学生营销策划赛</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-65531436-1', 'auto');
      ga('send', 'pageview');
    </script>
  </head>
  <body>
    <div class="team-client-reset-pwd">
      <%= form_for @contest_team , html: {id: 'team-client-reset-pwd'} do |f| %>
        <div>
          <%= image_tag "game-detail.png" %>
        </div>
        <div class="game-reset-pwd-dialog">
          <div class="game-reset-pwd-team-entrance">设置登录密码</div>
          <div>
            <%= password_field_tag :old_password, '', placeholder: '输入原密码', class: 'game-reset-pwd-team-input' %>
            <div class="error-message" id="old_password_error"><%= @contest_team.errors.messages[:old_password].first if @contest_team.errors[:old_password].any? %></div>
          </div>
          <div>
            <%= f.password_field :password, placeholder: '设置新密码', class: 'game-reset-pwd-team-input' %>
            <div class="error-message" id="contest_team_password_error"><%= @contest_team.errors.messages[:password].first if @contest_team.errors[:password].any? %></div>
          </div>
          <div>
            <%= f.password_field :password_confirmation, placeholder: '再输一次新密码', class: 'game-reset-pwd-team-input' %>
            <div class="error-message" id="contest_team_password_confirmation_error"><%= @contest_team.errors.messages[:password_confirmation].first if @contest_team.errors[:password_confirmation].any? %></div>
          </div>
          <div class="game-reset-pwd-bottom">
            <% if @contest_team.password_updated %>
              <div class="game-reset-pwd-button">
                <%= link_to "返回系统", contest_team_path(@contest_team), class: 'game-reset-pwd-back' %>
              </div>
            <% end %>
            <div class="game-reset-pwd-flex-x"></div>
            <div class="game-reset-pwd-button">
              <%= f.submit '提交修改', :disable_with => '正在提交修改...', class: 'game-reset-pwd-submit' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= javascript_include_tag 'application' %>
    <script>
      var _hmt = _hmt || [];
      (function() {
        var hm = document.createElement("script");
        hm.src = "//hm.baidu.com/hm.js?03fb7d78508848332aefc3dedb4fdc97";
        var s = document.getElementsByTagName("script")[0];
        s.parentNode.insertBefore(hm, s);
      })();
    </script>
  </body>
</html>
