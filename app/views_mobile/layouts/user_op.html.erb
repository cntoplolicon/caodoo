<% content_for :page_header do %>
  <a class="back mobile_go_back_button">
    <%= image_tag "mobile_back.png" %>
  </a>
  <div class="mobile-page-title">
    <%= yield :page_header_title %>
  </div>
<% end %>
<% content_for :content do %>
  <div class="user-op-container">
    <div class="user-op-form-container">
      <div class="center-block user-op-form" style="<%= yield :user_op_form_style %>">
        <%= yield %>
      </div>
    </div>
    <%= image_tag("mobile_user_op_background.png", class: "center-block user-background-img") %>
  </div>
<% end %>
<%= render template: "layouts/application" %>
